<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height=""></LinearLayout>-->

    <Button
        android:layout_width="match_parent"
        android:text="@string/start_again"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
        android:id="@+id/button_start_again"/>

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_start_again"
        >


    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Rozpocznij"
        android:id="@+id/buttonStart"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="separator"
        android:id="@+id/buttonSeparator"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>


    <com.tomlocksapps.matrixcodes.view.DrawView
        android:visibility="visible"
        android:layout_above="@id/button_start_again"
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.tomlocksapps.matrixcodes.view.UserPositionView
        android:id="@+id/userPositionView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@id/button_start_again"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_margin="10dp" />



    <!--<ImageView-->

        <!--android:id="@+id/imageViewPreview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->


       <!--/>-->

    <ImageView
        android:visibility="visible"
        android:id="@+id/imageViewPreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/button_start_again"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp" />


</RelativeLayout>
